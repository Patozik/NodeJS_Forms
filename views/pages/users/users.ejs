
<h1 class="my-3">Użytkownicy</h1>
   
    <% users.forEach(user => { %>
        <div class="card bg-light mb-3">
            <div class="card-body">
                <p class="h3 mb-4"><%= user.name %> - ( <%= user.email %> )</p>
                <a href="/uzytkownicy/<%= user.id %>" class="btn btn-primary">Zobacz</a>
                <a href="/uzytkownicy/<%= user.id %>/szczegoly" class="btn btn-primary">Szczegóły</a>
                <a href="/admin/uzytkownicy/<%= user.id %>/edytuj" class="btn btn-warning">Edytuj</a>
                <a href="/admin/uzytkownicy/<%= user.id %>/usun"
                onclick="return confirm('Czy jesteś pewny/a ?')"
                class="btn btn-danger">Usuń</a>
            </div>
        </div>        
            
    <% }); %>
